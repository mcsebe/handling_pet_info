{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="name_pet" class="form-control" value="{{note.name_pet}}" />
        </div>

        <div class="form-group">
          <input type="text" name="type_pet" class="form-control" value="{{note.type_pet}}" />
        </div>

        <div class="form-group">
          <input type="text" name="breed_pet" class="form-control" value="{{note.breed_pet}}" />
        </div>

        <div class="form-group">
          <input type="text" name="mark" class="form-control" value="{{note.mark}}" />
        </div>

        <div class="form-group">
          <input type="text" name="color" class="form-control" value="{{note.color}}" />
        </div>

        <div class="form-group">
          <input type="text" name="date_born" class="form-control" value="{{note.date_born}}" />
        </div>

        <div class="form-group">
          <input type="text" name="obs_med" class="form-control" value="{{note.obs_med}}" />
        </div>

        <div class="form-group">

          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Guardar
            </button>
          </div>
      </form>
      <form action="/vaccines/add/{{note._id}}">
        <button type="submit" class="btn btn-danger btn-block btn-sm">Añadir una vacuna</button>
      </form>
      <div class="form-group">
        <form action="/operations/add/{{note._id}}">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Añadir una operación</button>
        </form>
      </div>
    </div>
  </div>