<div class="align-items-center">
  <h3>Registros {{user.name}}<i class="fas fa-paw"></i></h3>
</div>
<div class="row">
  {{#each notes}}
  <div class="col-md-10">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ name_pet }} <a href="/notes/see/{{_id}}"><i class="fas fa-eye"></i></a>
        </h4>
        <p class="card-title d-flex justify-content-between align-items-center">{{ type_pet }} <a
            href="/notes/see-info/{{_id}}"><i class="fas fa-info"></i></a></p>
      </div>
    </div>
  </div>
  {{else}}
  <div class="col-md-10">
    <div class="card">
      <div class="card-body">
        <h1>Hola {{user.name}}</h2>
          <h4 clsss="lead">Aún no existen registros de mascotas asociados a esta cuenta.</h4>
          <h7 clsss="lead">Acude a tu veterinario para añadir el registro de tu mascota.</h7>
          <div align="center"><img width='385px' height='366px' src="/img/tecnico.jpg"></div>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>