<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Usuario</h3>
        </div>
        <div class="card-body">
            <form action="/notes" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <h4>Nombre:</h4>
                    <h5>{{rutUser.name}}</h5>
                </div>
                <div class="form-group">
                    <h4>RUT:</h4>
                    <h5>{{rutUser.rut}}</h5>
                </div>
                <div class="form-group">
                </div>
            </form>
            <hr style="width:100%;">
            {{#each notes}}

            <h4 class="card-title d-flex justify-content-between align-items-center">
                {{ name_pet }} <a href="/notes/see/{{_id}}"><i class="fas fa-eye"></i></a>
            </h4>
            <p class="card-title d-flex justify-content-between align-items-center">{{ type_pet }} <a
                    href="/notes/edit/{{_id}}"><i class="fas fa-pencil-alt"></i></a></p>
            <!-- DELETE REQUEST -->
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar Registro</button>
            </form>
            <hr style="width:100%;">

            {{/each}}
            <h7>‏‏‎‎ ‏‏‎‎</h7>
            <form action="/">
                <button type="submit" class="btn btn-primary btn-block btn-sm">Volver a al inicio</button>
            </form>
        </div>
    </div>
</div>